# ===========================================
# DATABASE
# ===========================================
DATABASE_URL="postgresql://user:password@localhost:5432/database_name"

# ===========================================
# JWT AUTHENTICATION
# ===========================================

JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"

# ========================================
# JWT SECRETS (Generate baru untuk production!)
# ========================================
JWT_SECRET="your-secret-key-here"
JWT_EXPIRES_IN="1h"
REFRESH_TOKEN_SECRET="your-refresh-secret-here"
REFRESH_TOKEN_EXPIRES_IN="7d"

# ==========================================
# APP CONFIGURATION
# ==========================================
NODE_ENV="development"
PORT=3001
FRONTEND_URL="http://localhost:3000"
API_URL="http://localhost:3001"

# ==========================================
# EMAIL - NODEMAILER (SMTP)
# ==========================================
EMAIL_PROVIDER="bebas pilih"
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password-16-chars
MAIL_FROM="KPP Help Center <noreply@kpp-kb2.go.id>"

# ========================================
# SUPABASE (PRODUCTION ONLY)
# ========================================
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_KEY="your-anon-key"
SUPABASE_BUCKET="article-images"

# ===========================================
# RATE LIMITING
# ===========================================
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

